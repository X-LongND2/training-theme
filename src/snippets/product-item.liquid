<div class="product-item" style="{% if auto == true %}width: auto{% else %}width: calc((100% - {{ col | minus: 1 | times: 0.5 }}rem)/{{ col }}){% endif %}">
    <div class="thumbnail-wrapper">
      {{ product.featured_image | image_url: width: 400 | image_tag }}
      {% if product.compare_at_price != product.final_price %}
        <div class="rounded-3xl bg-blue-700 text-white absolute bottom-4 left-4 px-6 py-2 text-xl">Sale</div>
      {% endif %}
    </div>
    <p class="text-2xl">{{ product.title }}</p>
    <div class="price-wrapper">
      {% if product.compare_at_price != product.final_price %}
        <div class="text-2xl line-through">
          {{ product.compare_at_price | money_with_currency }}
        </div>  
      {% endif %}
      <div class="text-3xl">
        {{ product.price | money_with_currency }}
      </div>
    </div>
  </div>      