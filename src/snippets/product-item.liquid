{% if product != blank %}
<div class="product-item w-slider-{{ col_mobile }} md:w-slider-{{ col }} {% if auto == true %}!w-auto{% endif %}">
  <a class="thumbnail-wrapper" href="{{ product.url }}">
    {{ product.featured_image | image_url: width: 400 | image_tag }}
    {% if product.compare_at_price != product.final_price %}
      <div class="rounded-3xl bg-blue-700 text-white absolute bottom-4 left-4 px-6 py-2 text-xl">Sale</div>
    {% endif %}
  </a>
  <a class="text-2xl" href="{{ product.url }}">{{ product.title }}</a>
  <div class="price-wrapper">
    {% if product.compare_at_price != product.final_price %}
      <div class="text-2xl line-through">
        {{ product.compare_at_price | money_with_currency }}
      </div>  
    {% endif %}
    <div class="text-3xl">
      {{ product.price | money_with_currency }}
    </div>
  </div>
</div> 
{% else %}    
<div class="product-item w-slider-{{ col_mobile }} md:w-slider-{{ col }} {% if auto == true %}!w-auto{% endif %}">
  <div class="thumbnail-wrapper" style="cursor: not-allowed">
    <img src="{{ 'product_placeholder.jpg' | asset_url }}" width="auto" height="auto">
  </div>
  <p class="text-2xl" style="cursor: not-allowed">Example product title</p>
  <div class="price-wrapper">
    <div class="text-3xl" style="cursor: not-allowed">
      {{ 2000 | money_with_currency }}
    </div>
  </div>
</div> 
{% endif %}